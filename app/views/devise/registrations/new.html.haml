- meta title: t('signup')

%h1= t('signup')
%p= t('devise.registrations.new.content')

= simple_form_for resource, as: resource_name, url: user_registration_url do |f|
    = f.input :token, as: :hidden, input_html: { value: params[:token] }
    = component 'myg/form-field', as: :input, attribute: :name, class_name: 'user', floating_label: t('name'), input_html: { required: true, autofocus: true }
    = component 'myg/form-field', as: :input, attribute: :email, class_name: 'user', floating_label: t('email'), input_html: { required: true, type: 'email', value: params[:email] }
    = component 'myg/form-field', as: :input, attribute: :password, class_name: 'user', floating_label: t('password'), input_html: { required: true, type: 'password', minlength: 6 }
    %p.sm= t('devise.registrations.new.legal', privacy: link_to(t('privacy'), 'https://jonhue.me/tip-the-world-cup/privacy', target: '_blank'), terms: link_to(t('terms'), 'https://jonhue.me/tip-the-world-cup/terms', target: '_blank'))
    .myg-grid__flex.-space-between
        %p.sm
            = link_to t('devise.registrations.new.login_instead'), new_user_session_url(app: params[:app]), class: 'myg-text__hyperlink -inherit'
        = component 'myg/button', value: t('signup')
