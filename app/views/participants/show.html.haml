- meta title: @participant.user.name
- replace :back_location, game_participants_url(game_id: @game.to_param)

.nation-wrapper
  %h1.sm= @participant.user.name
  .feature-wrapper
    = link_to game_nation_url(game_id: @game.to_param, id: @participant.nation.to_param), data: { turbolinks_animate_animation: 'fadeout' } do
      = component 'flag', nation: @participant.nation, size: 'sm'
    %p= t('participants.show.nation', name: @participant.nation.name)
  .feature-wrapper
    %h4= @participant.position.ordinalize
    %p= t('participants.show.leaderboard')
  .feature-wrapper
    %h4= @participant.earned_points
    %p= t('participants.show.points')

.content-wrapper
  %h3= t('tips')
  - if @tips.any?
    .myg-card__container
      - @tips.each do |tip|
        = render tip
  - else
    %p= t('participants.show.no_tips')
